<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/color_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DETTAGLI OPERAZIONE"
            android:id="@+id/lb_dettagliOp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="sans"/>

    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_background"
        >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome"
                android:id="@+id/lb_dettNomeOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/txt_dettNomeOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Importo"
                android:id="@+id/lb_dettImportoOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/txt_dettImportoOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tipo"
                android:id="@+id/lb_dettTipoOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/txt_dettTipoOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Categoria"
                android:id="@+id/lb_dettCategoriaOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/txt_dettCategoriaOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Data"
                android:id="@+id/lb_dettDataOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/txt_dettDataOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ripetizione"
                    android:id="@+id/lb_dettRipeteOp"
                    android:textColor="@color/color_green"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="-"
                    android:id="@+id/txt_dettRipeteOp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mezzo"
                android:id="@+id/lb_dettMezzoOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/txt_dettMezzoOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Luogo"
                android:id="@+id/lb_dettLuogoOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/txt_dettLuogoOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"
                android:maxWidth="100dp"/>


        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:text="Google Maps"
            android:id="@+id/bt_googleMaps"
            android:background="@drawable/green_button"
            style="@style/button_text"
            android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d2f31">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Descrizione"
                android:id="@+id/lb_dettDescrizioneOp"
                android:textColor="@color/color_green"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="-"
                android:id="@+id/txt_dettDescrizioneOp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/view_fotoOperazione"
                android:layout_span="2"
            />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/color_background">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:id="@+id/bt_okDettOp"
                    android:background="@drawable/green_button"
                    style="@style/button_text"
                    android:layout_column="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elimina"
                    android:id="@+id/bt_eliminaOperazione"
                    android:background="@drawable/green_button"
                    style="@style/button_text"
                    android:layout_column="2"/>
        </TableRow>
    </TableLayout>
  </ScrollView>
</LinearLayout>