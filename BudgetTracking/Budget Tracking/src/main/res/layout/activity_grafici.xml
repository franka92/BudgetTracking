<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fillViewport="true"
    android:id="@+id/scroll_view"
    android:background="#2d2f31">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TITOLO SETTIMANA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/color_green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ULTIMA SETTIMANA"
            android:id="@+id/titolo_statistiche"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="sans"
            android:textAlignment="center"/>


    </LinearLayout>
    <!-- GRAFICO SETTIMANA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#22a86c"
        android:id="@+id/grafico_settimana"
        android:orientation="vertical">

        </LinearLayout>
        <!-- TOTALE SETTIMANA -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f4649"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:background="@color/color_tot_entrate">
                <TextView
                    android:id="@+id/txt_total"
                    android:text="TOTALE ENTRATE:"
                    style="@style/text_titolo_totale"
                    android:layout_column="1"/>
                <TextView
                    android:id="@+id/txt_total_value"
                    android:text="+43€"
                    style="@style/text_lista_operazioni"
                    android:layout_column="2"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:background="#e26969">
                <TextView
                    android:id="@+id/txt_total2"
                    android:text="TOTALE USCITE:"
                    style="@style/text_titolo_totale"
                    android:layout_column="1"/>
                <TextView
                    android:id="@+id/txt_total2_value"
                    android:text="-500€"
                    style="@style/text_lista_operazioni"
                    android:layout_column="2"/>
            </TableRow>

        </TableLayout>

        <!-- TITOLO MESE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/color_green">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ULTIMO MESE"
                android:id="@+id/titolo_statistiche_mese"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:textAlignment="center"/>


        </LinearLayout>
        <!-- GRAFICO MESE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="#22a86c"
            android:id="@+id/grafico_mese"
            android:orientation="vertical">

        </LinearLayout>
        <!-- TOTALE SETTIMANA -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f4649"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:background="@color/color_tot_entrate">
                <TextView
                    android:id="@+id/txt_total_mese"
                    android:text="TOTALE ENTRATE:"
                    style="@style/text_titolo_totale"
                    android:layout_column="1"/>
                <TextView
                    android:id="@+id/txt_total_mese_value"
                    android:text="+43€"
                    style="@style/text_lista_operazioni"
                    android:layout_column="2"/>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:background="#e26969">
                <TextView
                    android:id="@+id/txt_total2_mese"
                    android:text="TOTALE USCITE:"
                    style="@style/text_titolo_totale"
                    android:layout_column="1"/>
                <TextView
                    android:id="@+id/txt_total2_mese_value"
                    android:text="-500€"
                    style="@style/text_lista_operazioni"
                    android:layout_column="2"/>
            </TableRow>

        </TableLayout>

        <!-- TITOLO SPESE CATEGORIA-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/color_green">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SPESE PER CATEGORIA"
                android:id="@+id/titolo_statistiche_categorie"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:textAlignment="center"/>


        </LinearLayout>
        <!-- GRAFICO SPESE CATEGORIA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/color_background"
            android:id="@+id/grafico_categoria"
            android:orientation="vertical">

        </LinearLayout>
        <!-- TABELLA DETTAGLI SPESE CATEGORIA -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f4649"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tbl_spesa_cat">




        </TableLayout>
        <!-- TITOLO ENTRATE CATEGORIA-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/color_green">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ENTRATE PER CATEGORIA"
                android:id="@+id/titolo_statistiche_categorie_entrata"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="sans"
                android:textAlignment="center"/>


        </LinearLayout>
        <!-- GRAFICO ENTRATE CATEGORIA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/color_background"
            android:id="@+id/grafico_categoria_entrata"
            android:orientation="vertical">

        </LinearLayout>
        <!-- TABELLA DETTAGLI ENTRATE CATEGORIA -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f4649"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tbl_entrate_cat">




        </TableLayout>
    </LinearLayout>
</ScrollView>